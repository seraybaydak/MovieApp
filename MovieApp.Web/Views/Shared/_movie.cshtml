@model Movie

<div class="card mb-3">
    <div class="row">
        <div class="col-md-2">
            <img src="/img/@Model.ImageUrl" alt="@Model.Title" />
        </div>
        <div class="col md-10">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
               <p>
                   <a class="btn btn-primary" href="/movies/details/@Model.MovieId">Details</a>
               </p>
            </div>
        </div>
    </div>
</div>
